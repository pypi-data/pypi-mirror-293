                },
                "description": {
                    "$ref": "#/definitions/description"
                },
                "reference": {
                    "$ref": "#/definitions/reference"
                },
                "classes": {
                    "$ref": "#/definitions/classes"
                }
            },
            "additionalProperties": false
        },
        "circle": {
            "type": "object",
            "required": [
                "type",
                "reference"
            ],
            "properties": {
                "type": {
                    "const": "circle"
                },
                "description": {
                    "$ref": "#/definitions/description"
                },
                "reference": {
                    "$ref": "#/definitions/reference"
                },
                "classes": {
                    "$ref": "#/definitions/classes"
                }
            },
            "additionalProperties": false
        },
        "wsi": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "const": "wsi"
                },
                "description": {
                    "$ref": "#/definitions/description"
                }
            },
            "additionalProperties": false
        },
        "class": {
            "type": "object",
            "required": [
                "type",
                "reference"
            ],
            "properties": {
                "type": {
                    "const": "class"
                },
                "reference": {
                    "$ref": "#/definitions/reference"
                }
            },
            "additionalProperties": false
        },
        "continuous_pixelmap": {
            "type": "object",
            "required": [
                "type",
                "reference"
            ],
            "properties": {
                "type": {
                    "const": "continuous_pixelmap"
                },
                "description": {
                    "$ref": "#/definitions/description"
                },
                "reference": {
                    "$ref": "#/definitions/reference"
                },
                "channel_classes": {
                    "$ref": "#/definitions/classes"
                }
            },
            "additionalProperties": false
        },
        "discrete_pixelmap": {
            "type": "object",
            "required": [
                "type",
                "reference"
            ],
            "properties": {
                "type": {
                    "const": "discrete_pixelmap"
                },
                "description": {
                    "$ref": "#/definitions/description"
                },
                "reference": {
                    "$ref": "#/definitions/reference"
                },
                "channel_classes": {
                    "$ref": "#/definitions/classes"
