        },
        "wsi": {
            "type": "object",
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "const": "wsi"
                },
                "description": {
                    "$ref": "#/definitions/description"
                }
            },
            "additionalProperties": false
        },
        "class": {
            "type": "object",
            "required": [
                "type",
                "reference"
            ],
            "properties": {
                "type": {
                    "const": "class"
                },
                "reference": {
