{% load i18n html2text %}

{% block subject %}{% trans "Pay confirmation" %}: {{ order.form.title }} (#{{ order.pk }}){% endblock %}


{% block plain %}{% trans "Pay confirmation" %}

{% include "templated_email/order_number.email" %}

{% blocktrans %}Your transfer was registered and we will notify you for further progress.{% endblocktrans %}

{% include "templated_email/order_details.email" %}

{{ order.form.help_text|textify }}
{% endblock %}

{% block html %}
  <style>
    {% include "templated_email/order_email.css" %}
  </style>
  <div id="main">
    <div class="align-center">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="green" width="70px" height="70px">
        <path d="M0 0h24v24H0z" fill="none"/>
        <path
            d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
      </svg>
    </div>

    <h1 class="align-center">{% trans "Pay confirmation" %}</h1>

    {% include "templated_email/order_number.html" %}

    <p>
      {% blocktrans %}
        Your transfer was registered and we will notify you for further progress.
      {% endblocktrans %}
    </p>

    {% include "templated_email/order_details.html" %}

    {{ order.form.help_text|safe }}
  </div>
{% endblock %}
