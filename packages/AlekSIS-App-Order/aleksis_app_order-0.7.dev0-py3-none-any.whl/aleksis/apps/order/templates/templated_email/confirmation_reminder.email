{% load i18n html2text %}

{% block subject %}{% trans "REMINDER: Please confirm your order" %}: {{ order.form.title }} (#{{ order.pk }}){% endblock %}


{% block plain %}{% include "templated_email/order_number.email" %}

{% blocktrans %}Thank you very much for your order! Please click on the following link or open it in your browser to confirm
your order. If you don't do that, your order won't be registered. If the order was a mistake, please reply
to this email and we will delete the order.{% endblocktrans %}

{% trans "Confirm your order:" %} {{ confirm_url }}

{% include "templated_email/order_details.email" %}

{{ order.form.help_text|textify }}
{% endblock %}

{% block html %}
  <style>
    {% include "templated_email/order_email.css" %}
  </style>
  <div id="main">
    <div class="align-center">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="orange" width="70px" height="70px">
        <path d="M0 0h24v24H0z" fill="none"/>
        <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"/>
      </svg>
    </div>

    <h1 class="align-center">{% trans "Please confirm your order" %}</h1>

    {% include "templated_email/order_number.html" %}

   <p>
      {% blocktrans %}
        Thank you very much for your order! Please click on the following link or open it in your browser to confirm
        your order. If you don't do that, your order won't be registered. If the order was a mistake, please reply
        to this email and we will delete the order.
      {% endblocktrans %}
    </p>

    <p>
      {% trans "Confirm your order:" %}
      <a href="{{ confirm_url }}">{{ confirm_url }}</a>
    </p>

    {% include "templated_email/order_details.html" %}

    {{ order.form.help_text|safe }}
  </div>
{% endblock %}
